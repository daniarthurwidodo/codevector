{
  "name": "codevector",
  "displayName": "Codebase Intelligence",
  "description": "A fully local, privacy-first codebase intelligence engine for VSCode with hybrid semantic + keyword search",
  "version": "1.0.0",
  "publisher": "codevector",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Machine Learning",
    "Programming Languages"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codevector.indexWorkspace",
        "title": "Codebase Intelligence: Index Workspace"
      },
      {
        "command": "codevector.search",
        "title": "Codebase Intelligence: Search Codebase"
      },
      {
        "command": "codevector.showIndexStatus",
        "title": "Codebase Intelligence: Show Index Status"
      }
    ],
    "configuration": {
      "title": "Codebase Intelligence",
      "properties": {
        "codebaseSearch.vectorBackend": {
          "type": "string",
          "default": "wasm",
          "enum": [
            "wasm"
          ],
          "description": "Vector search backend implementation"
        },
        "codebaseSearch.bm25Weight": {
          "type": "number",
          "default": 0.5,
          "minimum": 0,
          "maximum": 1,
          "description": "Weight for BM25 keyword search in hybrid fusion (0 = vector only, 1 = keyword only)"
        },
        "codebaseSearch.maxChunkSize": {
          "type": "number",
          "default": 500,
          "minimum": 100,
          "maximum": 2000,
          "description": "Maximum lines per code chunk"
        },
        "codebaseSearch.batchSize": {
          "type": "number",
          "default": 32,
          "minimum": 1,
          "maximum": 128,
          "description": "Batch size for embedding computation"
        },
        "codebaseSearch.efSearch": {
          "type": "number",
          "default": 64,
          "minimum": 16,
          "maximum": 256,
          "description": "HNSW efSearch parameter (higher = more accurate but slower)"
        },
        "codebaseSearch.excludeGlobs": {
          "type": "array",
          "default": [
            "**/node_modules/**",
            "**/.git/**",
            "**/dist/**",
            "**/build/**",
            "**/*.min.js",
            "**/vendor/**"
          ],
          "description": "Glob patterns to exclude from indexing"
        }
      }
    },
    "mcp": {
      "serverId": "codevector-mcp",
      "command": "node",
      "args": [
        "${extensionPath}/out/mcp/server.js"
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "test": "vitest",
    "build:wasm": "cd rust-hnsw && wasm-pack build --target web --out-dir ../wasm",
    "build": "npm run compile && npm run build:wasm"
  },
  "keywords": [
    "codebase",
    "search",
    "semantic",
    "vector",
    "hnsw",
    "bm25",
    "mcp",
    "local",
    "privacy"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@xenova/transformers": "^2.14.0",
    "tree-sitter": "^0.21.0",
    "tree-sitter-javascript": "^0.21.0",
    "tree-sitter-typescript": "^0.21.0",
    "tree-sitter-python": "^0.21.0",
    "tree-sitter-rust": "^0.21.0",
    "tree-sitter-go": "^0.21.0",
    "web-tree-sitter": "^0.21.0",
    "zod": "^3.22.4"
  }
}
