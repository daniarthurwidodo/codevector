{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2022",
    "lib": ["ES2022", "WebWorker"],
    "outDir": "out",
    "rootDir": ".",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*", "worker/**/*"],
  "exclude": ["node_modules", ".vscode-test", "rust-hnsw", "wasm", "out", "**/*.test.ts"]
}
